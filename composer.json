{
    "name": "juspay/express-checkout",
    "description": "Express Checkout SDK for PHP allows easy integration with Juspay's EC payments as a service platform",
    "authors": [
        {
            "name": "Ankur Gupta",
            "email": "ankur.gupta@juspay.in"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.4.6"
    },
    "autoload": {
        "psr-4": {
            "Juspay\\": "src/",
            "Juspay\\Core\\": "src/core",
            "Juspay\\Util\\": "src/util"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Juspay\\": "src/",
            "Juspay\\Core\\": "src/core",
            "Juspay\\Util\\": "src/util"
        }
    },
    "scripts" :{
        "test": [
            "@composer install",
            "./vendor/bin/phpunit --debug test/"
        ]
    }
}
